{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "cppbuild",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g3",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++2a",
                "-Wall",
                "-Wextra",
                "-fsanitize=address",
                "-fno-omit-frame-pointer",
                "-I",
                "${workspaceFolder}/sw/Inc",
                "-I",
                "${workspaceFolder}/sw/Src",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
